<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/prefs_category_octopus">
        <EditTextPreference
            android:defaultValue="40"
            android:inputType="number"
            android:key="octopus_min_size"
            android:summary="@string/prefs_octopus_min_size_summary"
            android:title="@string/prefs_octopus_min_size_title" />
        <EditTextPreference
            android:defaultValue="180"
            android:inputType="number"
            android:key="octopus_max_size"
            android:summary="@string/prefs_octopus_max_size_summary"
            android:title="@string/prefs_octopus_max_size_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/prefs_category_background">
        <com.rarepebble.colorpicker.ColorPreference
            android:defaultValue="#FF205090"
            android:key="gradient_start_color"
            android:summary="@string/prefs_gradient_start_color_summary"
            android:title="@string/prefs_gradient_start_color_title"
            app:colorpicker_showAlpha="false" />
        <com.rarepebble.colorpicker.ColorPreference
            android:defaultValue="#FF001040"
            android:key="gradient_end_color"
            android:summary="@string/prefs_gradient_end_color_summary"
            android:title="@string/prefs_gradient_end_color_title"
            app:colorpicker_showAlpha="false" />
        <Preference
            android:key="reset_background_colors"
            android:summary="@string/prefs_reset_colors_summary"
            android:title="@string/prefs_reset_colors_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/prefs_category_live_wallpaper">
        <Preference
            android:key="set_live_wallpaper"
            android:summary="@string/prefs_set_live_wall_summary"
            android:title="@string/prefs_set_live_wall_title" />
        <Preference
            android:defaultValue="false"
            android:enabled="false"
            android:key="restart_live_wallpaper"
            android:summary="@string/prefs_reset_live_wallpaper_summary"
            android:title="@string/prefs_reset_live_wallpaper_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/prefs_category_screensaver">
        <Preference
            android:key="set_screensaver"
            android:summary="@string/prefs_set_screensaver_summary"
            android:title="@string/prefs_set_screensaver_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/prefs_category_animations">
        <ListPreference
            android:defaultValue="@string/anim_short"
            android:entries="@array/prefs_fade_duration_entries"
            android:entryValues="@array/prefs_fade_duration_values"
            android:key="octo_fade_in_duration"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="%s"
            android:title="@string/prefs_octo_fade_in_duration_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/prefs_category_general">
        <SwitchPreference
            android:defaultValue="false"
            android:key="transparent_settings_icon"
            android:summary="@string/prefs_hide_settings_summary"
            android:title="@string/prefs_hide_settings_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/prefs_category_experimental">
        <SwitchPreference
            android:defaultValue="false"
            android:key="octopus_weird_eyes"
            android:summary="@string/prefs_octopus_weird_eyes_summary"
            android:title="@string/prefs_octopus_weird_eyes_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="octopus_leg_particles"
            android:summary="@string/prefs_octopus_leg_particles_summary"
            android:title="@string/prefs_octopus_leg_particles_title" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="octopus_leg_path_debug"
            android:summary="@string/prefs_octopus_leg_path_debug_summary"
            android:title="@string/prefs_octopus_leg_path_debug_title" />
    </PreferenceCategory>
</PreferenceScreen>